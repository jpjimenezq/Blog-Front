{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "singularName": "category",
    "pluralName": "categories",
    "displayName": "Category"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "cover": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "publications": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::publication.publication",
      "mappedBy": "categories"
    }
  }
}
